<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hloong.demo.activity.MainActivity" >

	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:gravity="center"
    	android:orientation="vertical"
	    >
        <TextView
            android:id="@+id/tv"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="测试数据" />

        <Button
            android:id="@+id/btn_multi_list"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ListView包含多种布局状态，聊天消息" />
        <Button
        android:id="@+id/btn_multi"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView包含多种布局状态" />
    <Button
        android:id="@+id/btn_simple_list"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通的ListView" />
    <Button
        android:id="@+id/btn_list_gridview"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView下包含GridView" />
    <Button
        android:id="@+id/btn_bar_code"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二维码扫描" />
    <Button
        android:id="@+id/btn_list_abcde"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="带abcde列表展示" />
    <Button
        android:id="@+id/btn_two_side_circle"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击2边同时上升的环形demo" />
    <Button
        android:id="@+id/btn_form"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="股票，价格收益表格demo" />
    <Button
        android:id="@+id/btn_chenjinshi"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="沉浸式界面" />
	</LinearLayout>
</ScrollView>
